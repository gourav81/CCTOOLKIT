<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Graph">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane fx:id="root" prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: #1f2121#1f2121;">
            <children>
                <Button fx:id="but" layoutX="873.0" layoutY="407.0" mnemonicParsing="false" onAction="#plotClicked" text="Plot  Graph" />
                <TextArea fx:id="txtAr" layoutX="873.0" layoutY="24.0" prefHeight="365.0" prefWidth="200.0" promptText="The first line contains two integers n and m - number of nodes and number of edges in a graph. Next m lines contains 2 integers a and b, each denoting an edge between  nodes a and b.">
                    <font>
                        <Font size="21.0" />
                    </font>
                </TextArea>
                <CheckBox fx:id="isDirectedCheckBox" layoutX="871.0" layoutY="457.0" mnemonicParsing="false" text="DIRECTED" textFill="WHITE" />
                <CheckBox fx:id="isWeightedCheckBox" layoutX="869.0" layoutY="494.0" mnemonicParsing="false" text="WEIGHTED" textFill="WHITE" />
            </children>
        </AnchorPane>
    </children>
</GridPane>